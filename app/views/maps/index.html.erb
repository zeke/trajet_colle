<h1>Listing maps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Description</th>
  </tr>

<% @maps.each do |map| %>
  <tr>
    <td><%=h map.name %></td>
    <td><%=h map.permalink %></td>
    <td><%=h map.description %></td>
    <td><%= link_to 'Show', map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New map', new_map_path %>